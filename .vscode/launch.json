{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Comp/run - Filipe", // compila e roda seu programa c++ no debugger
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "compile_file",
            // "program": "${workspaceFolder}/Hallo.exe",
            "program": "${workspaceFolder}/compiled.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\mingw\\bin\\gdb.exe",
            "showDisplayString": true,
            "visualizerFile": "${workspaceRoot}/my.natvis",            
            "logging": {
                "moduleLoad": false,
                "trace": true
            }
        },
        {
            "name": "Launch - Filipe", // roda seu arquivo executável no debugger(não compila de novo)
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/compiled.exe", // substituir o nome {compiled.exe} pelo nome do seu arquivo executável
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\mingw\\bin\\gdb.exe"
        }
    ]
}